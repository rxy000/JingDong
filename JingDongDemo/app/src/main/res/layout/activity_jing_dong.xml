<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bw.com.jingdongdemo.JingDongActivity">
    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/radio_group" />
    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <RadioButton
            android:button="@null"
            android:layout_weight="1"
            android:text="首页"
            android:id="@+id/btn_home"
            android:gravity="center"
            android:drawableTop="@drawable/home_selector"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <RadioButton
            android:button="@null"
            android:layout_weight="1"
            android:text="分类"
            android:id="@+id/btn_sort"
            android:gravity="center"
            android:drawableTop="@drawable/sort_selector"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <RadioButton
            android:button="@null"
            android:layout_weight="1"
            android:text="发现"
            android:id="@+id/btn_find"
            android:gravity="center"
            android:drawableTop="@drawable/find_selector"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <RadioButton
            android:button="@null"
            android:layout_weight="1"
            android:text="购物车"
            android:id="@+id/btn_shopping"
            android:gravity="center"
            android:drawableTop="@drawable/shopping_selector"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <RadioButton
            android:button="@null"
            android:layout_weight="1"
            android:text="我的"
            android:id="@+id/btn_my"
            android:gravity="center"
            android:drawableTop="@drawable/my_selector"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </RadioGroup>
</RelativeLayout>
